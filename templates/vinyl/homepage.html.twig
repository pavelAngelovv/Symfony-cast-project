{% extends 'base.html.twig' %}

{% block title %}
Welcome to My Website
{%endblock%}
{% block stylesheets %}
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }
        
        header {
            background-color: #35424a;
            color: #fff;
            text-align: center;
            padding: 1rem 0;
        }
        
        nav ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
            background-color: #35424a;
        }
        
        nav li {
            margin-right: 1rem;
        }
        
        nav a {
            text-decoration: none;
            color: #fff;
        }
        
        main {
            padding: 2rem;
        }
        
        section {
            margin-bottom: 2rem;
        }
        
        h2 {
            color: #35424a;
        }
        
        footer {
            text-align: center;
            padding: 1rem 0;
            background-color: #35424a;
            color: #fff;
        }
    </style>
{%endblock%}
{% block body %}
<body>
    <header>
        <h1>Welcome to My Website</h1>
    </header>
    
    <nav>
        <ul>
            <li><a href="#">Home</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Services</a></li>
            <li><a href="#">Contact</a></li>
        </ul>
    </nav>
    
    <main>
        <section>
            <h2>{{title}}</h2>
        </section>
    </main>
    
    <footer>
        <p>&copy; 2023 My Website. All rights reserved.</p>
    </footer>
</body>
{%endblock%}

